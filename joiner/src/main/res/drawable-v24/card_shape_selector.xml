<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:id="@id/card_image_view">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <stroke android:width="16dp" android:color="@android:color/holo_red_light" />
            <gradient android:angle="270"
                android:startColor="#0f1594"
                android:centerColor="#131aae"
                android:endColor="#161ec8"/>
        </shape>
    </item>
    <item android:state_focused="false" android:id="@+id/buttonNotSelected">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient android:angle="270"
                android:startColor="#0f1594"
                android:centerColor="#131aae"
                android:endColor="#161ec8"/>
        </shape>
    </item>

    <item android:state_activated="true" android:id="@id/card_image_view">
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <gradient android:angle="270"
                android:startColor="#0f1594"
                android:centerColor="#131aae"
                android:endColor="#161ec8"/>
            <stroke android:width="16dp" android:color="@android:color/holo_green_dark"/>
        </shape>
    </item>
</selector>